<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTitle"
                android:textSize="22sp"
                android:textColor="#000"
                android:text="Article Title"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:src="@drawable/articles_icon"
                android:layout_centerHorizontal="true"
                android:id="@+id/imgArticle"
                android:layout_below="@+id/txtTitle"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgArticle"
                android:textColor="#000"
                android:text="This text describes this article..."
                android:id="@+id/txtArticle"
                android:maxLines="4"
                android:ellipsize="marquee"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/txtArticle"
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:id="@+id/linearLayout2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0 Likes"
                    android:layout_gravity="center_vertical"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:id="@+id/txtLikes"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0 Comments"
                    android:layout_gravity="center_vertical"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:id="@+id/txtComments"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                android:layout_below="@+id/linearLayout2"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/likeLayout"
                    android:orientation="horizontal"
                    android:background="@drawable/frame_background"
                    android:padding="3dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/unliked_icon"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/imgLike"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Like"
                        android:layout_gravity="center_vertical"
                        android:textSize="19sp"
                        android:textColor="#345"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/commentLayout"
                    android:orientation="horizontal"
                    android:background="@drawable/frame_background"
                    android:padding="3dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/comments_icon"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comment"
                        android:layout_gravity="center_vertical"
                        android:textSize="19sp"
                        android:textColor="#345"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>